@model WeekendWindow.Models.ViewerLocation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout-Viewers.cshtml";
}

<h1>Edit</h1>

<h4>ViewerLocation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViewerLocationId" />
            <div class="form-group">
                <label asp-for="ViewerLocationName" class="control-label">Location Name</label>
                <input asp-for="ViewerLocationName" class="form-control" />
                <span asp-validation-for="ViewerLocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerLocationAddress" class="control-label">Address</label>
                <input asp-for="ViewerLocationAddress" class="form-control" />
                <span asp-validation-for="ViewerLocationAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerLocationCity" class="control-label">City</label>
                <input asp-for="ViewerLocationCity" class="form-control" />
                <span asp-validation-for="ViewerLocationCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerLocationStateId" class="control-label">State</label>
                <select asp-for="ViewerLocationStateId" class="form-control" asp-items="ViewBag.ViewerLocationStateId"></select>
                <span asp-validation-for="ViewerLocationStateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerLocationZip" class="control-label">Zip Code</label>
                <input asp-for="ViewerLocationZip" class="form-control" />
                <span asp-validation-for="ViewerLocationZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
