@model WeekendWindow.Models.Viewer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout-Viewers.cshtml";
}

<h1>Edit</h1>

<h4>Viewer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViewerId" />
            @Html.HiddenFor(model => model.IdentityUserId)
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="NotificationDay" asp-items="Html.GetEnumSelectList<DayOfWeek>()" class="form-control">
                    <option value="">Choose a day</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ViewerAddress" class="control-label"></label>
                <input asp-for="ViewerAddress" class="form-control" />
                <span asp-validation-for="ViewerAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerCity" class="control-label"></label>
                <input asp-for="ViewerCity" class="form-control" />
                <span asp-validation-for="ViewerCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerState" class="control-label"></label>
                <select asp-for="ViewerState" class="form-control" asp-items="ViewBag.States"></select>
            </div>
            <div class="form-group">
                <label asp-for="ViewerZip" class="control-label"></label>
                <input asp-for="ViewerZip" class="form-control" />
                <span asp-validation-for="ViewerZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerLong" class="control-label"></label>
                <input asp-for="ViewerLong" class="form-control" />
                <span asp-validation-for="ViewerLong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerLat" class="control-label"></label>
                <input asp-for="ViewerLat" class="form-control" />
                <span asp-validation-for="ViewerLat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
