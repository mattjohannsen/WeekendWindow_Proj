@model WeekendWindow.Models.Viewer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout-Viewers.cshtml";
}

<h1>Create</h1>

<h4>Viewer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"> Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerPhone" class="control-label"></label>
                <input asp-for="ViewerPhone" class="form-control" />
                <span asp-validation-for="ViewerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="NotificationDay" asp-items="Html.GetEnumSelectList<DayOfWeek>()" class="form-control">
                    <option value="">Choose a day</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ViewerAddress" class="control-label">Address</label>
                <input asp-for="ViewerAddress" class="form-control" />
                <span asp-validation-for="ViewerAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerCity" class="control-label">City</label>
                <input asp-for="ViewerCity" class="form-control" />
                <span asp-validation-for="ViewerCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViewerState" class="control-label">State</label>
                <select asp-for="ViewerState" class="form-control" asp-items="ViewBag.States"></select>
            </div>
            <div class="form-group">
                <label asp-for="ViewerZip" class="control-label">Zip Code</label>
                <input asp-for="ViewerZip" class="form-control" />
                <span asp-validation-for="ViewerZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
